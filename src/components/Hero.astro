---
import TimerGame from './TimerGame.astro';
---

<section class="pt-16 pb-8 md:pt-28 md:pb-12">
  <div class="max-w-[1100px] mx-auto px-6">
    <div
      class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-8 lg:gap-12"
    >
      <div class="flex-1 max-w-2xl">
        <h1
          class="text-2xl sm:text-3xl md:text-5xl font-bold mb-5 leading-tight text-[var(--text-primary)]"
        >
          Hi, I'm <span class="text-[var(--accent)] space-mono"
            >Faizan Shaik</span
          >
        </h1>

        <p
          class="text-sm sm:text-base md:text-lg text-[var(--text-secondary)] mb-5 leading-relaxed"
        >
          22, intern <a
            href="https://atlan.com"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--accent)] font-medium hover:underline underline-offset-2 transition-colors"
            >@atlan</a
          > building <span class="text-[var(--text-primary)]"
            >data + AI products</span
          >, backend systems, and scalable SaaS platforms. This is my corner of
          the internet—where I share my <a
            href="/blog"
            class="text-[var(--text-primary)] hover:text-[var(--accent)] transition-colors"
            >writings</a
          >, projects, and experiments. I love tinkering with whatever I can get
          my hands on. Happy to have you here—<a
            href="/about"
            class="text-[var(--accent)] underline underline-offset-2 hover:text-[var(--text-primary)] transition-colors"
            >learn more about me</a
          >, or try my <span class="text-[var(--accent)]">timer game</span> and beat
          the leaderboard <span class="hidden lg:inline text-[var(--accent)]"
            >→</span
          ><span class="lg:hidden text-[var(--accent)]">↓</span>
        </p>

        <div class="flex flex-wrap items-center gap-3 sm:gap-4">
          <span
            class="text-xs text-[var(--text-secondary)] flex items-center gap-1.5"
          >
            <svg
              class="w-3.5 h-3.5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Hyderabad
          </span>
          <div class="flex items-center gap-2">
            <a
              href="https://github.com/fyzanshaik"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="GitHub"
              class="p-1.5 rounded-md text-[var(--text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--bg-surface)] transition-all"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                ></path>
              </svg>
            </a>
            <a
              href="https://linkedin.com/in/fyzanshaik"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="p-1.5 rounded-md text-[var(--text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--bg-surface)] transition-all"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
            </a>
            <a
              href="https://x.com/fyzanshaik"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="X (Twitter)"
              class="p-1.5 rounded-md text-[var(--text-secondary)] hover:text-[var(--accent)] hover:bg-[var(--bg-surface)] transition-all"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <div class="hidden lg:flex">
        <TimerGame />
      </div>
    </div>

    <div class="flex lg:hidden mt-6 justify-center">
      <div class="timer-game-mobile-wrapper flex gap-3">
        <div class="flex-1">
          <div
            id="mobile-game-box"
            class="relative w-32 h-32 border border-[var(--border)] rounded-lg cursor-pointer select-none overflow-hidden flex flex-col items-center justify-center touch-manipulation"
          >
            <span
              id="mobile-target-time"
              class="text-2xl font-mono text-[var(--accent)]">1s</span
            >
            <span
              id="mobile-game-status"
              class="text-[10px] text-[var(--text-secondary)] mt-1"
              >tap to start</span
            >
          </div>
          <div class="flex items-center justify-center gap-1 mt-2">
            <button
              id="mobile-mode-prev"
              class="p-1 text-[var(--text-secondary)] active:text-[var(--accent)] transition-colors touch-manipulation"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>
            <div class="flex gap-1">
              <button
                data-mode="1"
                class="mobile-mode-btn text-[10px] px-2 py-0.5 rounded font-mono text-[var(--accent)] bg-[var(--accent)]/10 touch-manipulation"
                >1s</button
              >
              <button
                data-mode="5"
                class="mobile-mode-btn text-[10px] px-2 py-0.5 rounded font-mono text-[var(--text-secondary)] touch-manipulation"
                >5s</button
              >
              <button
                data-mode="10"
                class="mobile-mode-btn text-[10px] px-2 py-0.5 rounded font-mono text-[var(--text-secondary)] touch-manipulation"
                >10s</button
              >
              <button
                data-mode="15"
                class="mobile-mode-btn text-[10px] px-2 py-0.5 rounded font-mono text-[var(--text-secondary)] touch-manipulation"
                >15s</button
              >
            </div>
            <button
              id="mobile-mode-next"
              class="p-1 text-[var(--text-secondary)] active:text-[var(--accent)] transition-colors touch-manipulation"
            >
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
        <div class="w-20 flex flex-col justify-center text-right">
          <div class="mb-2">
            <span class="text-[10px] text-[var(--text-secondary)] block"
              >your best</span
            >
            <span
              id="mobile-your-score"
              class="text-xs font-mono text-[var(--text-primary)]">—</span
            >
          </div>
          <div>
            <span class="text-[10px] text-[var(--text-secondary)] block"
              >high score</span
            >
            <span
              id="mobile-high-score"
              class="text-xs font-mono text-[var(--accent)]">—</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function () {
    const mobileGameBox = document.getElementById('mobile-game-box');
    const mobileTargetTime = document.getElementById('mobile-target-time');
    const mobileGameStatus = document.getElementById('mobile-game-status');
    const mobileYourScore = document.getElementById('mobile-your-score');
    const mobileHighScore = document.getElementById('mobile-high-score');
    const mobileModePrev = document.getElementById('mobile-mode-prev');
    const mobileModeNext = document.getElementById('mobile-mode-next');
    const mobileModeBtns = document.querySelectorAll('.mobile-mode-btn');

    if (!mobileGameBox) return;

    const modes = [1, 5, 10, 15];
    let currentMode = 0;
    let gameState = 'idle';
    let startTime = 0;
    let randomInterval: number | null = null;
    let userScores: Record<string, number> = {};
    let highScores: Record<string, number> = {};

    async function fetchHighScore() {
      try {
        const response = await fetch(
          `/api/timer-game?mode=${modes[currentMode]}`
        );
        if (response.ok) {
          const data = (await response.json()) as { highScore: number | null };
          if (data.highScore !== null && data.highScore !== undefined) {
            highScores[modes[currentMode].toString()] = data.highScore;
            if (mobileHighScore) {
              mobileHighScore.textContent = data.highScore.toFixed(3) + 's';
            }
          }
        }
      } catch (e) {
        console.warn('Failed to fetch high score:', e);
      }
    }

    function updateModeDisplay() {
      if (!mobileTargetTime || !mobileYourScore) return;
      mobileTargetTime.textContent = modes[currentMode] + 's';
      mobileModeBtns.forEach(btn => {
        const mode = parseInt((btn as HTMLElement).dataset.mode || '0');
        if (mode === modes[currentMode]) {
          btn.classList.add('text-[var(--accent)]', 'bg-[var(--accent)]/10');
          btn.classList.remove('text-[var(--text-secondary)]');
        } else {
          btn.classList.remove('text-[var(--accent)]', 'bg-[var(--accent)]/10');
          btn.classList.add('text-[var(--text-secondary)]');
        }
      });
      const score = userScores[modes[currentMode].toString()];
      mobileYourScore.textContent =
        score !== undefined ? score.toFixed(3) + 's' : '—';

      const hs = highScores[modes[currentMode].toString()];
      if (mobileHighScore) {
        mobileHighScore.textContent =
          hs !== undefined ? hs.toFixed(3) + 's' : '—';
      }
      fetchHighScore();
    }

    function startGame() {
      if (!mobileTargetTime || !mobileGameStatus) return;
      startTime = performance.now();
      gameState = 'running';
      mobileGameStatus.textContent = 'tap to stop!';
      randomInterval = window.setInterval(() => {
        mobileTargetTime.textContent = (Math.random() * 99).toFixed(3);
      }, 50);
    }

    function stopGame() {
      if (!mobileTargetTime || !mobileGameStatus || !mobileYourScore) return;
      if (randomInterval) {
        clearInterval(randomInterval);
        randomInterval = null;
      }
      const elapsed = (performance.now() - startTime) / 1000;
      const target = modes[currentMode];
      const diff = elapsed - target;
      const absDiff = Math.abs(diff);

      mobileTargetTime.textContent = elapsed.toFixed(3) + 's';
      mobileGameStatus.textContent =
        diff >= 0 ? '+' + diff.toFixed(3) + 's' : diff.toFixed(3) + 's';
      gameState = 'result';

      const currentBest = userScores[target.toString()];
      if (currentBest === undefined || absDiff < currentBest) {
        userScores[target.toString()] = absDiff;
        mobileYourScore.textContent = absDiff.toFixed(3) + 's';
        localStorage.setItem(
          'timer-game-mobile-scores',
          JSON.stringify(userScores)
        );
      }

      setTimeout(() => {
        gameState = 'idle';
        if (mobileTargetTime && mobileGameStatus) {
          mobileTargetTime.textContent = modes[currentMode] + 's';
          mobileGameStatus.textContent = 'tap to start';
        }
      }, 2000);
    }

    function handleGameTap(e: Event) {
      e.preventDefault();
      e.stopPropagation();
      if (gameState === 'idle') {
        startGame();
      } else if (gameState === 'running') {
        stopGame();
      }
    }

    mobileGameBox.addEventListener('touchend', handleGameTap, {
      passive: false,
    });
    mobileGameBox.addEventListener('click', handleGameTap);

    function handleModePrev(e: Event) {
      e.preventDefault();
      e.stopPropagation();
      currentMode = (currentMode - 1 + modes.length) % modes.length;
      updateModeDisplay();
    }

    function handleModeNext(e: Event) {
      e.preventDefault();
      e.stopPropagation();
      currentMode = (currentMode + 1) % modes.length;
      updateModeDisplay();
    }

    mobileModePrev?.addEventListener('touchend', handleModePrev, {
      passive: false,
    });
    mobileModePrev?.addEventListener('click', handleModePrev);
    mobileModeNext?.addEventListener('touchend', handleModeNext, {
      passive: false,
    });
    mobileModeNext?.addEventListener('click', handleModeNext);

    mobileModeBtns.forEach(btn => {
      function handleModeBtn(e: Event) {
        e.preventDefault();
        e.stopPropagation();
        const mode = parseInt((btn as HTMLElement).dataset.mode || '0');
        currentMode = modes.indexOf(mode);
        updateModeDisplay();
      }
      btn.addEventListener('touchend', handleModeBtn, { passive: false });
      btn.addEventListener('click', handleModeBtn);
    });

    const savedScores = localStorage.getItem('timer-game-mobile-scores');
    if (savedScores) {
      try {
        userScores = JSON.parse(savedScores);
      } catch (e) {
        console.warn('Failed to parse saved scores:', e);
      }
    }
    updateModeDisplay();
  })();
</script>
