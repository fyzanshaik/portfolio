---
const experiences = [
  {
    company: 'Rare Labs',
    role: 'Software Developer Intern',
    period: 'Oct 2024 – Apr 2025',
    description:
      'Built AI-powered Legal Research Platform with 98% accuracy, reduced query time by 90%.',
  },
  {
    company: 'Encapz Technologies',
    role: 'Full Stack Intern',
    period: 'Apr 2024 – Aug 2024',
    description:
      'Optimized backend services using Java Spring Boot, reducing latency by 60% via Redis caching.',
  },
  {
    company: 'United Network Of Professionals',
    role: 'Software Engineer Intern',
    period: 'Sep 2023 – Apr 2024',
    description:
      'Redesigned Quiz UI and built RESTful APIs with Node.js/Express for real-time feedback.',
  },
];
---

<section>
  <h2 class="text-2xl font-bold mb-8">Work History</h2>

  <div class="relative border-l border-[var(--border)] ml-2 space-y-12">
    {
      experiences.map(exp => (
        <div class="relative pl-8">
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 bg-[var(--text-primary)] rounded-full" />

          <div class="flex flex-col gap-1">
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
              <h3 class="text-lg font-bold text-[var(--text-primary)]">
                {exp.company}
              </h3>
              <span class="text-sm text-[var(--text-secondary)] space-mono-regular">
                {exp.period}
              </span>
            </div>

            <p class="text-sm font-medium text-[var(--text-primary)] mb-2">
              {exp.role}
            </p>

            <p class="text-sm text-[var(--text-secondary)] leading-relaxed space-mono-regular">
              {exp.description}
            </p>
          </div>
        </div>
      ))
    }
  </div>
</section>
