---
import ThemeToggle from './ThemeToggle.astro';
---

<header
  class="w-full py-6 border-b border-[var(--border)] bg-[var(--bg-primary)]"
>
  <div
    class="max-w-3xl mx-auto px-6 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4"
  >
    <div class="flex flex-wrap gap-4 text-sm sm:text-base space-mono-regular">
      <a
        href="/"
        class="hover:underline decoration-[var(--accent)] decoration-1 underline-offset-4 text-[var(--text-primary)]"
        >/home</a
      >
      <a
        href="#work"
        class="hover:underline decoration-[var(--accent)] decoration-1 underline-offset-4 text-[var(--text-primary)]"
        >/work</a
      >
      <a
        href="#projects"
        class="hover:underline decoration-[var(--accent)] decoration-1 underline-offset-4 text-[var(--text-primary)]"
        >/projects</a
      >
      <a
        href="/blog"
        class="hover:underline decoration-[var(--accent)] decoration-1 underline-offset-4 text-[var(--text-primary)]"
        >/blog</a
      >
    </div>

    <div class="flex items-center gap-4">
      <ThemeToggle />
    </div>
  </div>
</header>
