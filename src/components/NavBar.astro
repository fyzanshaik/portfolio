  <script is:inline>
    (function () {
      function setInitialSoundIconState(onId, offId) {
        const onIcon = document.getElementById(onId);
        const offIcon = document.getElementById(offId);
        if (!onIcon || !offIcon) return;

        const isMuted = localStorage.getItem('audio-muted') === 'true';
        if (isMuted) {
          onIcon.classList.add('hidden');
          offIcon.classList.remove('hidden');
        } else {
          onIcon.classList.remove('hidden');
          offIcon.classList.add('hidden');
        }
      }

      function setInitialThemeIconState(lightId, darkId) {
        const lightIcon = document.getElementById(lightId);
        const darkIcon = document.getElementById(darkId);
        if (!lightIcon || !darkIcon) return;

        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
          lightIcon.classList.remove('hidden');
          darkIcon.classList.add('hidden');
        } else {
          lightIcon.classList.add('hidden');
          darkIcon.classList.remove('hidden');
        }
      }

      function initIcons() {
        setInitialSoundIconState('sound-icon-on', 'sound-icon-off');
        setInitialSoundIconState(
          'mobile-sound-icon-on',
          'mobile-sound-icon-off'
        );
        setInitialSoundIconState(
          'mobile-menu-sound-icon-on',
          'mobile-menu-sound-icon-off'
        );
        setInitialThemeIconState(
          'mobile-top-theme-icon-light',
          'mobile-top-theme-icon-dark'
        );
        setInitialThemeIconState(
          'mobile-menu-theme-icon-light',
          'mobile-menu-theme-icon-dark'
        );
      }

      function setupDockBehavior() {
        const nav = document.getElementById('desktop-nav');
        const navContent = document.getElementById('nav-content');
        const indicator = document.getElementById('nav-indicator');
        if (!nav || !navContent) return;

        let hideTimeout = null;
        let isHovering = false;

        function showNav() {
          if (hideTimeout) {
            clearTimeout(hideTimeout);
            hideTimeout = null;
          }
          isHovering = true;
          navContent.classList.remove('lg:-translate-x-[calc(100%-4px)]');
          navContent.classList.add('lg:translate-x-0');
          if (indicator) {
            indicator.style.opacity = '0';
          }
        }

        function hideNav() {
          isHovering = false;
          hideTimeout = setTimeout(() => {
            if (!isHovering) {
              navContent.classList.remove('lg:translate-x-0');
              navContent.classList.add('lg:-translate-x-[calc(100%-4px)]');
              if (indicator) {
                indicator.style.opacity = '1';
              }
            }
          }, 300);
        }

        nav.addEventListener('mouseenter', showNav);
        nav.addEventListener('mouseleave', hideNav);

        document.addEventListener('mousemove', e => {
          if (window.innerWidth >= 1280) return;
          if (window.innerWidth < 1024) return;

          if (e.clientX <= 8 && !isHovering) {
            showNav();
          }
        });
      }

      initIcons();
      setupDockBehavior();
      document.addEventListener('astro:page-load', () => {
        initIcons();
        setupDockBehavior();
      });
    })();
  </script>

  <div
    id="email-notification"
    class="fixed top-4 right-4 bg-[var(--bg-surface)] border border-[var(--border)] text-[var(--text-primary)] px-4 py-2 rounded-lg shadow-lg z-50 opacity-0 pointer-events-none transition-all duration-300 transform translate-x-full"
  >
