---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import Hero from '../components/Hero.astro';
import GitHubStats from '../components/GitHubStats.astro';
import Timeline from '../components/Timeline.astro';
import Projects from '../components/Projects.astro';
import '../styles/global.css';
---

<Layout>
  <NavBar />
  <main class="max-w-3xl mx-auto px-6 py-12 flex flex-col gap-20">
    <Hero />
    <div id="work">
      <Timeline />
    </div>
    <div id="projects">
      <Projects />
    </div>
    <GitHubStats />
  </main>
  <footer class="border-t border-[var(--border)] py-8 mt-12">
    <div class="max-w-3xl mx-auto px-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-xs text-[var(--text-secondary)] space-mono-regular">
          Â© 2025 Faizan Shaik
        </p>
        <div class="flex items-center gap-4 text-xs space-mono-regular">
          <a
            href="https://github.com/fyzanshaik"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:underline decoration-[var(--text-primary)] underline-offset-4 transition-colors"
          >
            GitHub
          </a>
          <a
            href="https://linkedin.com/in/fyzanshaik"
            target="_blank"
            rel="noopener noreferrer"
            class="text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:underline decoration-[var(--text-primary)] underline-offset-4 transition-colors"
          >
            LinkedIn
          </a>
          <a
            href="mailto:fyzanshaik.work@gmail.com"
            class="text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:underline decoration-[var(--text-primary)] underline-offset-4 transition-colors"
          >
            Email
          </a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
