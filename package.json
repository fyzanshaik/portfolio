{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro --config eslint.config.ts",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix --config eslint.config.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run lint && bun run format:check",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "cf:dev": "./node_modules/.bin/wrangler dev",
    "cf:deploy": "bun run build && ./node_modules/.bin/wrangler deploy",
    "cf:preview": "bun run build && ./node_modules/.bin/wrangler dev",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,astro,json,md,css}": [
      "prettier --write"
    ],
    "*.{js,ts,astro}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@tailwindcss/vite": "^4.1.14",
    "astro": "^5.14.4",
    "tailwindcss": "^4.1.14",
    "wrangler": "^4.42.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
